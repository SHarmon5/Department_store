<%= link_to 'Home', depts_path %>
<h1><%= @item.id ? 'Edit Item' : 'Add an Item' %></h1>
<hr />
<%= form_for [@dept, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body, required: true %>
  <%= f.label :price %>
  <%= f.text_field :price, required: true %>
  <%= f.submit %>
<% end %>